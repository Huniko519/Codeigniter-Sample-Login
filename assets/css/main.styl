$white = #fff
$black = #000
$grey = #757575

$red = #ff6866
$green = #1ea664
$yellow = #e4bd35

//  schema
$title-clr = #444444
$text-clr = #707070
$clr1 = #78B0EF

/*==============================
	Fonts
==============================*/
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&family=Roboto:ital,wght@0,400;0,500;0,700;1,400&display=swap')

/*==============================
	Common styles
==============================*/
html
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
html
body
	height 100%
body
	font-family 'Roboto', sans-serif
	font-weight 400
	background-color $white
	-webkit-font-smoothing antialiased
button
	padding 0
	border none
	background-color transparent
	border-radius 0
	&:focus
		outline none
a
	transition .3s ease
	&:hover
	&:active
	&:focus
		outline none
		text-decoration none
input
textarea
select
	padding 0
	margin 0
	border-radius 0
	-webkit-appearance none
	-moz-appearance none
	appearance none
	box-shadow none
	&:focus
		outline none
ul
	margin 0
	padding 0
	list-style none
::-moz-selection
	background $title-clr
	color $white
	text-shadow none
::selection
	background $title-clr
	color $white
	text-shadow none

::-webkit-input-placeholder
	color $clr1
	opacity 1
::-moz-placeholder
	color $clr1
	opacity 1
:-moz-placeholder
	color $clr1
	opacity 1
:-ms-input-placeholder
	color $clr1
	opacity 1

/* owl carousel dots customized */
.owl-dots
	position relative
	width 100%
	text-align center
	-webkit-tap-highlight-color transparent
	display flex
	flex-direction row
	justify-content center
	align-items center
	margin-top 40px
	.owl-dot
		display block
		position relative
		margin 0 8px
		width 14px
		height 14px
		span
			display block
			position absolute
			width 6px
			height 6px
			top 50%
			left 50%
			transform translate(-50%, -50%)
			-webkit-backface-visibility visible
			transition .4s
			background-color rgba($title-clr, .65)
			border-radius 50%
		&.active
			span
				width 10px
				height 10px
				background-color $title-clr

.owl-carousel .owl-item img
	width auto
	max-width 100%

/* custom close btn for modal */
.mfp-image-holder .mfp-close
.mfp-iframe-holder .mfp-close
	color transparent
	font-size 0
	right 0
	opacity 1
	width 30px
	height 40px
	padding-right 0
	&:after
		content '\e646'
		font-family 'themify'
		color $title-clr
		display block
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		font-size 20px
		transition .3s ease-in-out
	&:hover
		&:after
			color $text-clr

/* custom bg for modal */
.mfp-bg
	background transparent
	background-color rgba($clr1, .65)
	opacity 1

.mfp-fade.mfp-bg 
	opacity 0
	transition .4s ease

.mfp-fade.mfp-bg.mfp-ready
	opacity .75

.mfp-fade.mfp-bg.mfp-removing
	opacity 0

.mfp-fade.mfp-wrap .mfp-content
	opacity 0
	transition .4s ease

.mfp-fade.mfp-wrap.mfp-ready .mfp-content
	opacity 1

.mfp-fade.mfp-wrap.mfp-removing .mfp-content
	opacity 0

.mfp-iframe-scaler
	iframe
		border-radius 6px
		overflow hidden
		box-shadow 0 16px 56px 0 rgba($black, .1)

/* container */
.container
	@media (min-width: 1300px)
		max-width 1250px

/*==============================
	Header
==============================*/
.header
	position fixed
	top 0
	left 0
	right 0
	height 60px
	padding 0 15px
	display flex
	flex-direction row
	justify-content space-between
	align-items center
	background-color transparent
	z-index 9
	transition .3s ease
	transition-property background-color, box-shadow
	&__menu
		height 40px
		width 40px
		position absolute
		right 15px
		display block
		cursor pointer
		z-index 9
		i
			position absolute
			top 0
			left 0
			height 40px
			width 40px
			font-size 24px
			line-height 40px
			transition .3s
			color $title-clr
			&.ti-close
				opacity 1
				font-size 0
		&--active
			i.ti-close
				opacity 1
				font-size 20px
				color $white
			i.ti-menu
				font-size 0
				opacity 0
	&__nav
		position fixed
		width 280px
		right 0
		top 0
		bottom 0
		background-color $title-clr
		padding 60px 30px 0
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		border-bottom 1px solid rgba($white, .1)
		transform translate3d(280px, 0, 0)
		transition .3s ease-in-out
		z-index 8
		li
			margin-bottom 15px
			&:last-child
				margin-bottom 0
		a
			color $white
			font-size 16px
			letter-spacing .6px
			i
				color $white
				transition .3s ease
		&--active
			transform translate3d(0, 0, 0)
	&__dropdown
		position relative
		display block
		width 100%
		.dropdown-toggle
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			i
				font-size 8px
				margin-top 3px
				margin-left 4px
	&__dropdown-menu
		position absolute
		background-color $white
		padding 20px 25px
		display block
		width 100%
		text-align left
		z-index -1
		pointer-events none
		opacity 0
		border-radius 6px
		box-shadow 0 16px 56px 0 rgba($black, .1)
		transition .3s ease
		margin-top 0
		top 0
		li
			padding 0
			margin-bottom 10px
			&:last-child
				margin-bottom 0
		a
			font-size 16px
			color $title-clr
		&.show
			z-index 1000
			pointer-events auto
			opacity 1
			margin-top 15px
	&--white
		background-color $white
	&--active
		background-color $white
		box-shadow 0 6px 26px 0 rgba($black, .1)
	@media (min-width: 576px)
		&__nav
			padding 90px 30px 0
	@media (min-width: 768px)
		padding 0 25px
		height 80px
		&__nav
			padding 110px 30px 0
		&__menu
			right 25px
	@media (min-width: 1200px)
		padding 0 35px
		height 90px
		&__menu
			display none
		&__nav
			transform translate3d(0, 0, 0)
			width auto
			right auto
			bottom auto
			top auto
			height auto
			flex-direction row
			background-color transparent
			padding 0
			position relative
			text-align center
			white-space nowrap
			border none
			justify-content center
			align-items center
			li
				margin 0 20px
				padding 0
			a
				color $text-clr
				i
					color $text-clr
				&:hover
					color $title-clr
					i
						color $title-clr
		&__dropdown
			display inline-block
			width auto
			&.show
				.dropdown-toggle
					color $title-clr
		&__dropdown-menu
			min-width 160px
			width auto
			li
				margin 0 0 10px
				&:last-child
					margin-bottom 0
		&--active
		&--white
			background-color $white
			.btn
				background-color $clr1
				color $white
				&:hover
					color $white
	@media (min-width: 1600px)
		padding 0 50px

/*==============================
	Home
==============================*/
.home
