	0% 
		bottom 0
	75%
		bottom 10px
	100% 
		bottom 0

/*==============================
	Default button
==============================*/
.btn
	position relative
	display flex
	flex-direction row
	justify-content center
	align-items center
	height 56px
	width 100%
	max-width 180px
	font-size 13px
	text-transform uppercase
	background-color $clr1
	font-weight 700
	color $white
	border-radius 30px
	letter-spacing 1px
	overflow hidden
	cursor pointer
	transition .3s ease
	&:hover
		color $white
		background-color $title-clr
	&--white
		background-color $white
		color $clr1
