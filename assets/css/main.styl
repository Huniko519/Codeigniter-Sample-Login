	&__particles
		position absolute
		display block
		top 0
		right 0
		bottom 0
		left 0
		z-index -2
	&__feature
		display block
		padding 30px
		background-color $white
		margin 15px 0
		position relative
		border-radius 6px
		box-shadow 0 16px 56px 0 rgba($black, .1)
		i
